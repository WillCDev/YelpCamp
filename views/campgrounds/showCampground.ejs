<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <a class="list-group-item" href="/campgrounds">Back</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= campground.image %>">
                    <div class="caption-full">
                        <h4 class="pull-right">Â£<%= campground.price.toFixed(2) %>/night</h4>
                        <h4>
                            <a href=""><%= campground.name %></a>
                        </h4>
                        <p><%= campground.description %></p>
                        <p>
                            <em>Submitted by: <%= campground.author.username %></em>
                        </p>

                        <% if (currentUser && campground.author.id.equals(currentUser.id)){ %>
                            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="campsiteButton">
                                <button type="submit" class="btn btn-xs btn-danger">Delete</button>
                            </form>
                        <% } %>

                    </div>
                    
                </div>
                <div class="well comments-container">
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p><%= comment.text %></p>

                                <% if (currentUser && comment.author.id.equals(currentUser.id)){ %>
                                    <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" method="GET" class="campsiteButton">
                                        <button type="submit" class="btn btn-xs btn-warning">Edit Comment</button>
                                    </form>
                                    <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" class="campsiteButton">
                                        <button type="submit" class="btn btn-xs btn-danger">Delete Comment</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                    <hr>
                    <div class="text-right">
                        <a class="btn btn-xs btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>