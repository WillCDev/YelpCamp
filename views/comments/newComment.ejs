<% include ../partials/header %>

<div class="container">

    <div class="row">

        <h1 style="text-align: center;">Add a New Comment to <%= campground.name %></h1>

        <div style="width:30%;margin:35px auto;">

            <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="Author">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Comment Text">    
            </div>
            <div class="form-group">
                <button type="Submit" class="btn btn-md btn-primary btn-block">Create</button>    
            </div>
            
            </form>
            <a href="../">Go Back</a>
        </div>

        
    </div>

</div>



<% include ../partials/footer %>