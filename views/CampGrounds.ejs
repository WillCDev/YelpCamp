<% include partials/header %>

<div class="container">

    <header class="jumbotron">

        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand picked campgrounds from all over the world!</p>
            <p class="btn btn-primary btn-large"><a href="/campgrounds/new">Create a new Camp Ground</a></p>    
        </div>

    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>

    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(item){ %>
        <div class="col-md-3 col-sm-6"> 
            <div class="thumbnail">
                <img src=' <%= item.image %> '>  
                <div class="caption">
                    <h4>
                    <%= item.name %>
                    </h4>    
                </div>  
            </div>
        </div>
        <% }) %>    
    </div>

    

</div>

<% include partials/footer %>